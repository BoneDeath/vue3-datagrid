{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
